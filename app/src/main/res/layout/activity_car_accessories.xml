<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product_page.car_accessories">

    <!-- Title -->
    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/car_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Accessories"
        android:textColor="@color/primary"
        android:textSize="24sp"
        android:padding="16dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"/>

    <!-- ScrollView for the list of products -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:elevation="4dp"
        app:cardCornerRadius="10dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <!-- List of Products -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/product_image_1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/car_phone_mount"
                    android:contentDescription="Product Image 1"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/product_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Car Phone Mount"
                        android:textSize="18sp"/>

                    <TextView
                        android:padding="4dp"
                        android:id="@+id/product_price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$25"
                        android:textSize="16sp"
                        android:textColor="@android:color/holo_green_dark"/>
                </LinearLayout>

                <Button
                    android:background="@drawable/button_background"
                    android:padding="12dp"
                    android:textColor="@color/white"
                    android:id="@+id/add_to_cart_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to Cart"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/product_image_2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/car_seat_organizer"
                    android:contentDescription="Product Image 2"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/product_name_2"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Car Seat Organizer"
                        android:textSize="18sp"/>

                    <TextView
                        android:padding="4dp"
                        android:id="@+id/product_price_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$15"
                        android:textSize="16sp"
                        android:textColor="@android:color/holo_green_dark"/>
                </LinearLayout>

                <Button
                    android:background="@drawable/button_background"
                    android:padding="12dp"
                    android:textColor="@color/white"
                    android:id="@+id/add_to_cart_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to Cart"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/product_image_3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/dashboard_camera"
                    android:contentDescription="Product Image 3"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/product_name_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Dashboard Camera"
                        android:textSize="18sp"/>

                    <TextView
                        android:padding="4dp"
                        android:id="@+id/product_price_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$70"
                        android:textSize="16sp"
                        android:textColor="@android:color/holo_green_dark"/>
                </LinearLayout>

                <Button
                    android:background="@drawable/button_background"
                    android:padding="12dp"
                    android:textColor="@color/white"
                    android:id="@+id/add_to_cart_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to Cart"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/product_image_4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/car_air_purifier"
                    android:contentDescription="Product Image 4"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/product_name_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Car Air Purifier"
                        android:textSize="18sp"/>

                    <TextView
                        android:padding="4dp"
                        android:id="@+id/product_price_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$40"
                        android:textSize="16sp"
                        android:textColor="@android:color/holo_green_dark"/>
                </LinearLayout>

                <Button
                    android:background="@drawable/button_background"
                    android:padding="12dp"
                    android:textColor="@color/white"
                    android:id="@+id/add_to_cart_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to Cart"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </ScrollView>
</LinearLayout>
