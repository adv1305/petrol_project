<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".product_page.productpage">

    <TextView
        android:id="@+id/prod_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Categories"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/lubricants_oils_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Lubricants and Oils"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="?android:attr/colorButtonNormal"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_margin="2dp"
        android:backgroundTintMode="add"/>

    <Button
        android:id="@+id/car_accessories_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Car Accessories"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="?android:attr/colorButtonNormal"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_margin="2dp"
        android:backgroundTintMode="add"/>

    <Button
        android:id="@+id/maintenance_tools_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Maintenance and Repair Tools"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="?android:attr/colorButtonNormal"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_margin="2dp"
        android:backgroundTintMode="add"/>

    <Button
        android:id="@+id/cleaning_products_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Cleaning and Care Products"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="?android:attr/colorButtonNormal"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_margin="2dp"
        android:backgroundTintMode="add"/>

    <Button
        android:id="@+id/safety_kits_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Safety and Emergency Kits"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="?android:attr/colorButtonNormal"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_margin="2dp"
        android:backgroundTintMode="add"/>

</LinearLayout>
